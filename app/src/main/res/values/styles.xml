<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="shapeStyle">

        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/shape_circle</item>

    </style>

    <style name="activityBackground">

        <item name="android:background">@drawable/shade_background</item>

    </style>

    <style name="buttonStyle">

        <item name="android:background">@drawable/shape_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">5dp</item>

    </style>


</resources>
